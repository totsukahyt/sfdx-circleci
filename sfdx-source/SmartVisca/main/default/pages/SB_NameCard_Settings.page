<apex:page controller="SB_NameCard_SettingsController">
  <apex:slds />
  <apex:stylesheet value="{!URLFOR($Asset.SLDS, 'assets/styles/salesforce-lightning-design-system.min.css')}" />
  <apex:pageMessages />
  <apex:includeLightning />

  <div class="slds">
    <div id="lt_comp" />
  </div>
    <div id="firstlogin" class="slds-spinner_container">
      <div class="slds-spinner_brand slds-spinner slds-spinner_medium" role="alert">
         <div class="slds-assistive-text">Loading</div>
            <div class="slds-spinner__dot-a"></div>
            <div class="slds-spinner__dot-b"></div>
      </div>
   </div>
  <script>
      var appname='{!JSENCODE(appname)}';
      var settingname = '{!JSENCODE(settingname)}';
      $Lightning.use(appname, function() {
        $Lightning.createComponent(settingname,{showStyle:'Classic'},"lt_comp",function(cmp) {
            document.getElementById('firstlogin').style.display = 'none';
        });
      });
  </script>
</apex:page>