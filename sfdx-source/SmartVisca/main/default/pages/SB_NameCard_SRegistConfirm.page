<apex:page docType="html-5.0" applyHtmlTag="false" showHeader="false" sidebar="false" standardStylesheets="false">
<head>
    <title>{!$Label.SB_NCS1R_Text_ConfirmationOfRegToAccAndCon}</title>

<style type="text/css">
i.createNew {
  color: #b22222;  // firebrick
}
i.overwrite {
  color: #4682b4;  // steelblue
  font-size: 12px;
}
i.nooverwrite {
  color: #696969;  // dimgray
  font-size: 12px;
}
</style>
</head>

<!-- 登録前 -->
<div class="panel panel-success" ng-show="!working && !registered">
  <!-- 登録前 ヘッダ -->
  <div class="panel-heading">{!$Label.SB_NCS1R_Text_RegistContents}</div>
  <!-- 登録前 内容 -->
  <div class="panel-body">
    <!-- アカウント に関する表示 -->
    <!-- アカウントの名称 -->
    <div class="row">
      <div class="col-xs-5 col-sm-3"><i class="fa fa-building"></i>&nbsp;{!$ObjectType.Account.Label}&nbsp;:</div>
      <!-- 新規 -->
      <div class="col-xs-7 col-sm-9" ng-show="registParam.accountId === null" style="font-weight: bolder;"><i class="fa fa-plus-circle createNew"></i>&nbsp;{!$Label.SB_NCS1R_Text_CreateNew}</div>
      <!-- 更新 -->
      <div class="col-xs-7 col-sm-9" ng-show="registParam.accountId !== null" style="font-weight: bolder;">{{selectedItem.account.title}}</div>
    </div>
    <!-- 上書きについて -->
    <div class="row" ng-show="registParam.accountId !== null">
      <div class="col-xs-10" ng-show="settings.overwriteAccount" style="margin-left:2em;"><i class="fa fa-pencil-square-o overwrite"></i>&nbsp;{{labels.acntOW}}</div>
      <div class="col-xs-10" ng-hide="settings.overwriteAccount" style="margin-left:2em;"><i class="fa fa-link nooverwrite"></i>&nbsp;{{labels.acntNOW}}</div>
    </div>
    <!-- アカウント 新規に関する表示 -->
    <div ng-show="registParam.accountId === null">
      <!-- レコードタイプ -->
      <div class="row" ng-show="settings.registRectype.account !== null && acntRecTypeName" style="margin-left:2em;">
        <div class="col-xs-5 col-sm-3">{!$Label.SB_NCS1R_Text_RecordType}&nbsp;:</div>
        <div class="col-xs-7 col-sm-9">{{acntRecTypeName}}</div>
      </div>
    </div>
    <!-- コンタクト に関する表示 -->
    <!--  コンタクトの名称-->
    <div class="row">
      <div class="col-xs-5 col-sm-3"><i class="fa fa-user"></i>&nbsp;{!$ObjectType.Contact.Label}&nbsp;:</div>
      <!-- 新規 -->
      <div class="col-xs-7 col-sm-9" ng-show="registParam.contactId === null" style="font-weight: bolder;"><i class="fa fa-plus-circle createNew"></i>&nbsp;{!$Label.SB_NCS1R_Text_CreateNew}</div>
      <!-- 更新 -->
      <div class="col-xs-7 col-sm-9" ng-show="registParam.contactId !== null" style="font-weight: bolder;">{{selectedItem.contact.title}}</div>
    </div>
    <!-- 上書きについて -->
    <div class="row" ng-show="registParam.contactId !== null">
      <div class="col-xs-10" ng-show="settings.overwriteContact" style="margin-left:2em;"><i class="fa fa-pencil-square-o overwrite"></i>&nbsp;{{labels.contOW}}</div>
      <div class="col-xs-10" ng-hide="settings.overwriteContact" style="margin-left:2em;"><i class="fa fa-link nooverwrite"></i>&nbsp;{{labels.contNOW}}</div>
    </div>
    <!-- コンタクト 新規に関する表示 -->
    <div ng-show="registParam.contactId === null">
      <!-- レコードタイプ -->
      <div class="row" ng-show="settings.registRectype.contact !== null && contRecTypeName" style="margin-left:2em;">
        <div class="col-xs-5 col-sm-3">{!$Label.SB_NCS1R_Text_RecordType}&nbsp;:</div>
        <div class="col-xs-7 col-sm-9">{{contRecTypeName}}</div>
      </div>
    </div>
  </div>
</div>

<!-- 登録中 -->
<div class="panel panel-success" ng-show="working">
  <!-- 登録中 ヘッダ -->
  <div class="panel-heading">{!$Label.SB_NCS1R_Text_Registering}</div>
  <!-- 登録中 内容 -->
  <dir class="panel-body">
    <div style="text-align:center">
      <i class="fa fa-spinner fa-pulse fa-2x" style="color:#3cb371"></i>
    </div>
  </dir>
</div>

<!-- 登録成功-->
<div class="panel panel-success" ng-show="!working && registered && success">
  <!-- 登録成功 ヘッダ -->
  <div class="panel-heading">{!$Label.SB_NCS1R_Text_RegisteredBelow}</div>
  <!-- 登録成功 内容 -->
  <div class="panel-body">
    <h5>{!$Label.SB_NCS1R_Text_RegisteredBelow}</h5>
    <!-- アカウントの名称 リンク-->
    <div class="row">
      <div class="col-xs-5 col-sm-3">{!$ObjectType.Account.Label}&nbsp;:</div>
      <div class="col-xs-7 col-sm-9"><a ng-click="openRecord(account)">{{account.name}}</a></div>
    </div>
    <!-- コンタクトの名称 リンク-->
    <div class="row">
      <div class="col-xs-5 col-sm-3">{!$ObjectType.Contact.Label}&nbsp;:</div>
      <div class="col-xs-7 col-sm-9"><a ng-click="openRecord(contact)">{{contact.name}}</a></div>
    </div>
  </div>
</div>

<!-- 登録失敗 表示 -->
<div class="panel panel-danger" ng-show="!working && registered && !success">
  <!-- 登録失敗 ヘッダ -->
  <div class="panel-heading">{!$Label.SB_NCS1R_Text_RegisteredFalt}</div>
  <!-- 登録失敗 内容 -->
  <div class="panel-body">
    <div class="row" style="white-space: normal; padding: 0px 10px 0px 5px;">
      <h5 class="text-danger" style="word-wrap:break-word;">{{error}}</h5>
      <!-- 重複エラー時の情報 -->
      <div ng-show="duplication != null" style="padding: 0px 10px 0px 15px;" >
        <div ng-repeat="dup in duplication.dups">
          <div class="row">
            <div class="col-xs-5 col-sm-3">{{dup.objLabel}}&nbsp;:</div>
            <div class="col-xs-7 col-sm-9"><a ng-click="openRecord(dup)">{{dup.name}}</a></div>
          </div>
        </div>
        <!-- 重複してても保存する  -->
        <div class="form-group checkbox checkbox-success checkbox-circle" ng-show="duplication.allowRetry" style="text-align: center;">
          <input id="cbAllowSave" type="checkbox"  ng-model="duplication.allowSave"/>
          <label for="cbAllowSave"><i class="fa fa-files-o"></i>&nbsp;{!$Label.SB_NC_SaveAlertIgnore}</label>
        </div>
      </div>
    </div>
  </div>
</div>


<br/>
<br/>
<br/>
<!-- ボタン -->
<nav class="navbar navbar-default navbar-fixed-bottom">
  <div style="padding:6px; text-align: center;">
    <!-- 戻る ボタン -->
    <div class="btn btn-default pull-left" role="button" ng-show="!registered || !success" ng-disabled="editMode" ng-click="back()">
      <i class="fa fa-arrow-circle-o-left" aria-hidden="true">&nbsp;{!$Label.SB_NCS1R_Label_GoBack}</i>
    </div>
    <!-- キャンセル ボタン -->
    <div class="btn btn-default pull-center" role="button" ng-show="!registered || !success" ng-disabled="editMode" ng-click="return()">
      <i class="fa fa-ban" aria-hidden="true">&nbsp;{!$Label.SB_NCS1R_Label_Cancel}</i>
    </div>
    <!-- 登録 完了後の OK ボタン -->
    <div class="btn btn-default pull-center" role="button" ng-show="registered && success" ng-disabled="editMode" ng-click="return()">
      <i class="fa fa-arrow-left" aria-hidden="true">&nbsp;OK</i>
    </div>
    <!-- OK 登録実行 -->
    <div class="btn btn-default pull-right" role="button" ng-show="!registered || (!success && duplication != null && duplication.allowRetry)"
           ng-disabled="working" ng-click="submit()">
      <i class="fa fa-check-circle-o" aria-hidden="true">&nbsp;{!$Label.SB_NCS1R_Label_OK}</i>
    </div>
  </div>
</nav>

<!-- 登録実行中モーダル -->
<script id="loadingWindow.html" type="text/ng-template">
<div style ="padding: 20px;
  border-radius: 5px;
  background-color: rgba(0, 0, 0, 0.7);
  color: #fff;
  text-align: center;
  text-overflow: ellipsis;
  font-size: 15px;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left:-20px;
  ">
  <i class="fa fa-spinner fa-pulse"></i>
</div>
</script>

</apex:page>