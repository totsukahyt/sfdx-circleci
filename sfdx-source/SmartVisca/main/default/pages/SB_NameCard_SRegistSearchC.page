<apex:page docType="html-5.0" applyHtmlTag="false" showHeader="false" sidebar="false" standardStylesheets="false">
<!-- 取引先責任者検索 -->
<head>
<style type="text/css">
.required {
  transition:0.5s linear all;
  background: white;
}
.required.ng-invalid {
  border-color: #ff4500;
  background:white;
}
</style>
</head>

<div class="container" style="padding-top: 5pt;">

<!-- <h4>{{selectedItem.account.title}}の{!$ObjectType.Contact.Label}を検索します。</h4> -->
<h4 data-fittext=".9" data-fittext-min="10" data-fittext-max="inherit" >{{labels.caption}}</h4>

<!-- 検索 -->
<form id="searchForm" name="searchForm" class="form-inline">
  <div class="form-group">
    <!-- <label for="exampleInputName2">{!$ObjectType.Contact.Label}</label> -->
    <input type="text" class="form-control required" id="contactWord" ng-model="contactWord"
      uib-typeahead="can for can in candidates | filter:$viewValue | limitTo:16" typeahead-min-length="0"
      required="true" ng-minlength="2" ng-maxLength="80" placeholder="{!$ObjectType.Contact.Label}"/>
  </div>
  <button type="submit" class="btn btn-primary" ng-click="search()" ng-disabled="!searchForm.$valid || working">{!$Label.SB_NCS1R_Label_Search}</button>
</form>
    <br/>

  <!-- 検索中 -->
<!--   <div ng-show="working">
    <div class="sv-loading">
      <img src="{!URLFOR($Resource.SB_SmartVisca_Lib, 'img/loading.gif')}" />
    </div>
  </div>
-->
<div ng-show="working" style="padding-top:40px; text-align:center">
  <i class="fa fa-spinner fa-pulse fa-2x" style="color:#4169e1"></i>
</div>

  <!-- 取引先責任者 リスト -->
  <div ng-show="!working && done">
    <!-- 一致なし -->
    <p class="bg-warning" ng-show="persons.length === 0" ng-cloak="true">{{labels.notfound}}</p>
    <!-- 絞込む -->
    <div class="row" style="margin: 12px 0px 10px 10px;" ng-show="persons.length > 3">
        <input type="text" ng-model="searchFilter" placeholder="{!$Label.SB_NCS1R_Label_Filter}..." class="size-full plm prx pvm input input--default input--ph-1 input--focus-1" style="width:80%;"/>
    </div>

    <div class="row">
      <div class="well well-sm" style="margin-left: 10px;" ng-repeat="item in persons | filter: searchFilter | orderBy:order.key:order.asc" ng-cloak="true">
        <h4 class="card-header">{{item.title}}</h4>
        <!-- <div class="card-block"> -->
          <div class="row"  ng-repeat="val in item.summary">
            <div class="col-xs-12">
            {{val}}
            </div>
          </div>
          <p class=""></p>
          <a class="btn btn-primary" ng-click="openDetail(item)">{!$Label.SB_NCS1R_Label_Detials}</a>
          <a class="btn btn-primary" ng-click="select(item)">{!$Label.SB_NCS1R_Label_Select}</a>
        <!-- </div> -->
      </div>
    </div>

  </div>

</div>

<br/>
<br/>
<br/>

<!-- ボタン -->
<nav class="navbar navbar-default navbar-fixed-bottom">
  <div style="padding:6px; text-align: center;">
    <!-- CANCEL ボタン -->
    <div class="btn btn-default pull-left" role="button" ng-disabled="editMode" ng-click="cancel()">
      <i class="fa fa-arrow-circle-o-left" aria-hidden="true">&nbsp;{!$Label.SB_NCS1R_Label_GoBack}</i>
    </div>
    <!-- OK ボタン -->
<!--     <div class="btn btn-default pull-right" role="button" ng-disabled="!isSelected()" ng-click="save()">
      <i class="fa  fa-check-circle-o" aria-hidden="true">&nbsp;OK</i>
    </div>
 -->  </div>
</nav>
</apex:page>