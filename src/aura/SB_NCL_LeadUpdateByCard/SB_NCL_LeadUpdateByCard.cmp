<aura:component controller="SB_NCL_UpdateByCardLcController" implements="force:appHostable,force:hasRecordId" access="global" >
  <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
  <!-- エラーメッセージ -->
  <aura:attribute name="errorMsg" type="String"/>
  <!-- loading -->
  <aura:attribute name="loading" type="Boolean"/>
  <!-- 名刺更新Bean -->
  <aura:attribute name="sObjectDto" type="Sobject"/>
  <!-- 表示項目リスト -->
  <aura:attribute name="fieldList" type="Sobject"/>
  <!-- 入力に関する内容 -->
  <aura:attribute name="inputV" type="Sobject"/>
  <aura:attribute name="working" type="Boolean"/>

  <aura:handler name="seSObjEvent" event="c:SB_NCL_UpdateByCardEvent" action="{!c.updateNameCard}"/>

  <aura:renderIf isTrue="{!v.working}">
    <center>
      <lightning:spinner variant="brand" aura:id="mySpinner" size="large"/>
    </center>
  </aura:renderIf>

  <div class="slds-tabs_default" style="height: 100%; position: absolute; top: 0px; width: 100%; z-index:9001; left: 0; right: auto;overflow: auto;">
    <c:SB_NCL_UpdateByCard aura:id="updateNameCardCmp"
                                titleV="{!v.sObjectDto.titleV}"
                                inputV="{!v.inputV}"
                                fieldList="{!v.fieldList}"
                                dataList="{!v.sObjectDto.dataList}"
                                reId="{!v.recordId}"
                                errorMsg="{!v.errorMsg}"/>
  </div>
</aura:component>